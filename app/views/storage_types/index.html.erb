<h1>Listing Storage_Types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @storage_types.each do |storage_type| %>
  <tr>
    <td><%=h storage_type.name %></td>
    <td><%=h storage_type.description %></td>
    <td><%= link_to 'Show', storage_type %></td>
    <td><%= link_to 'Edit', edit_storage_type_path(storage_type) %></td>
  </tr>
<% end %>
</table>

