- model_class = Product.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:product_type_id)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:supplier_id)
      %th= model_class.human_attribute_name(:supplier_reference)
      %th= model_class.human_attribute_name(:brand)
      %th= model_class.human_attribute_name(:purchase_price)
      %th= model_class.human_attribute_name(:gst)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.id, product_path(product)
        %td= product.name
        %td= product.product_type_id
        %td= product.description
        %td= product.supplier_id
        %td= product.supplier_reference
        %td= product.brand
        %td= product.purchase_price
        %td= product.gst
        %td= product.active
        %td=l product.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(product), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(product), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary'
