<h2>Product: <%=h @product.name %></h2>

<table border="0" cellspacing="5" cellpadding="0">
<tr>
  <td><b>Description:<b></td>
  <td><%=h @product.description %></td>
</tr>

<tr>
  <td><b>Product type:</b></td>
  <td><%=h @product.product_type.name %></td>
</tr>

<tr>
  <td><b>Supplier:</b></td>
  <td><%=h @product.supplier.name %></td>
</tr>

<tr>
  <td><b>Supplier Product Code:</b></td>
  <td><%=h @product.supplier_reference %></td>
</tr>

<tr>
  <td><b>Certifier:</b></td>
  <td><%=h @product.certifier.name %></td>
</tr>

<tr>
  <td><b>Units of Measure:</b></td>
  <td><%=h @product.units_of_measure.short_name %></td>
</tr>

<tr>
  <td><b>Purchase Price:</b></td>
  <td><%= format_currency(@product.cost) %> (<%= @product.gst_message %>)</td>
</tr>

<tr>
  <td><b>Sale Price:</b></td>
  <td><%= format_currency(@product.price) %> (<%= @product.gst_message %>)</td>
</tr>

<tr>
  <td><b>Storage Type:</b></td>
  <td><%=h @product.storage_type.name %></td>
</tr>

<tr>
  <td><b>Storage Location:</b></td>
  <td><%=h @product.storage_location.name %></td>
</tr>

<tr>
  <td><b>Physical Form:</b></td>
  <td><%=h @product.physical_form.name %></td>
</tr>

<tr>
  <td><b>Amount in Stock:</b></td>
  <td><%=h @product.stock_quantity.to_s + @product.units_of_measure.short_name %></td>
</tr>
</table>

<p>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</p>