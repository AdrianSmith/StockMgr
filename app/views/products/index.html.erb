<h1>Listing Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Supplier</th>
    <th>Storage</th>
    <th>Location</th>
    <th>Physical Form</th>
    <th>Available Stock</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.product_type.name %></td>
    <td><%=h product.supplier.name %></td>
    <td><%=h product.storage_type.name %></td>
    <td><%=h product.storage_location.name %></td>
    <td><%=h product.physical_form.name %></td>
    <td><%=h product.stock_amount.to_s + product.units_of_measure.short_name %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

