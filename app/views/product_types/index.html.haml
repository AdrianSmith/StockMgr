- model_class = ProductType.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @product_types.each do |product_type|
      %tr
        %td= link_to product_type.id, product_type_path(product_type)
        %td= product_type.name
        %td= product_type.description
        %td= product_type.active
        %td=l product_type.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_type_path(product_type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), product_type_path(product_type), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_product_type_path, :class => 'btn btn-primary'
