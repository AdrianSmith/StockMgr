= form_for @certifier do |f|
  -if @certifier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@certifier.errors.count, "error")} prohibited this certifier from being saved:"
      %ul
        - @certifier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :logo_image_url
    = f.text_field :logo_image_url
  .actions
    = f.submit 'Save'
