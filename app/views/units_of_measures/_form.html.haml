= form_for @units_of_measure do |f|
  -if @units_of_measure.errors.any?
    #error_explanation
      %h2= "#{pluralize(@units_of_measure.errors.count, "error")} prohibited this units_of_measure from being saved:"
      %ul
        - @units_of_measure.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
