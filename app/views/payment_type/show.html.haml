- model_class = @payment_type.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @payment_type.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @payment_type.description
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @payment_type.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), payment_type_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_payment_type_path(@payment_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), payment_type_path(@payment_type), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
