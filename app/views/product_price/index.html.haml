- model_class = ProductPrice.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:product_id)
      %th= model_class.human_attribute_name(:amount)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @product_prices.each do |product_price|
      %tr
        %td= link_to product_price.id, product_price_path(product_price)
        %td= product_price.product_id
        %td= product_price.amount
        %td=l product_price.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_price_path(product_price), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), product_price_path(product_price), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_product_price_path, :class => 'btn btn-primary'
