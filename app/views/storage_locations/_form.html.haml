= form_for @storage_location do |f|
  -if @storage_location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@storage_location.errors.count, "error")} prohibited this storage_location from being saved:"
      %ul
        - @storage_location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
