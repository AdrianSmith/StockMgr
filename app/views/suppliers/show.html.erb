<div id="center">
  <h1><%= @supplier.name %> <%= link_to '[All Suppliers]', suppliers_path %></h1>
</div>            

<div id='right_small'>
  <h2>Account</h2>
  <table width="80%">
    <tr><td>Total Orders</td><td class="number"><%= format_currency(@supplier.total_purchase_orders) %></td></tr>
    <tr><td>Delivery Rules</td><td class="text"><%= @supplier.delivery_rules %></td></tr>
    <tr><td>Comments</td><td class="text"><%= @supplier.comment %></td></tr>
  </table>
</div>  

<div id='left_large'>
  <h2>Details <%= link_to icon_edit, edit_supplier_path(@supplier) %></h2>
  <table width="80%">
    <tr><td>Address</td><td><%= @supplier.pretty_address %></td></tr>
    <tr>
      <td>Email</td>
      <td>
        <%= mail_to(@supplier.email, @supplier.email,
        :subject => "StockMgr",
        :body => "Hi " + @supplier.name
        ) %>  
      </td>
    </tr>
    <tr><td>Phone</td><td><%= @supplier.pretty_phone %></td></tr>
  </table>
</div>


<div id="center">
  <h2>Orders <%= link_to('Add', {:controller => 'purchase_orders', :action => 'new', :id => @supplier.id}) %></h2>
  <div style='height:200px; overflow:auto; border-width:1px; border-style:solid; padding: 2px;'>
    <table class="listing" width="100%">
      <tr>
        <th>Order</th>
        <th>Created</th>
        <th>Comment</th>                        
        <th>Paid?</th>
        <th>Received?</th>
        <th>Price</th>
        <th></th>
      </tr>
      <% @supplier.purchase_orders.each do |order| %>
      <tr class="<%= cycle('','even') %>">
        <td class="status" width="7%"><%= link_to order.id, order %></td>
        <td class="status" width="12%"><%= format_date(order.created_at) %></td>
        <td class="text"><%= order.comment %></td>
        <td class="status" width="8%"><%= link_to(format_boolean(order.is_paid), :controller => 'suppliers', :action => 'toggle_order_paid_status', :id => @supplier.id, :order_id => order.id) %></td>
        <td class="status" width="8%"><%= link_to(format_boolean(order.is_received), :controller => 'suppliers', :action => 'toggle_order_received_status', :id => @supplier.id, :order_id => order.id) %></td>
        <td class="number" width="8%"><%= format_currency(order.total_cost) %></td>
        <td class="status" width="12%">
          <%= link_to(icon_pdf, :controller => 'sales_orders', :action => 'invoice_pdf', :id => order.id) %>
          <%= link_to icon_edit, edit_sales_order_path(order) %>
          <%= link_to icon_delete, sales_order_path(order), :confirm => 'Delete - Are you sure?', :method => :delete %>
        </td>
      </tr>
      <% end %>  
    </table>
  </div>
</div>