<h1>Suppliers</h1>

<div style='float: right; padding: 5px'>
<%= button_to 'New Supplier', new_supplier_path %>   
</div>

<table class="listing" width="100%">
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Email</th>
    <th>Comment</th>
    <th>Delivery rules</th>    
    <th></th>
  </tr>

  <% @suppliers.each do |supplier| %>
  <tr class="<%= cycle('','even') %>">
    <td class="text"><%= link_to supplier.name, supplier %></td>
    <td class="text"><%= link_to supplier.website, supplier.website %></td>
    <td class="text">
      <%= mail_to(supplier.email, supplier.email,
      :subject => "StockMgr",
      :body => "Hi " + supplier.name
      ) %>  
    </td>
    <td class="text"><%=h supplier.comment %></td>
    <td class="text"><%=h supplier.delivery_rules %></td>
    <td  class="status" width="7%">
      <%= link_to icon_edit, edit_supplier_path(supplier) %>
      <%= link_to icon_delete, supplier, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
  <% end %>
</table>

<br />

