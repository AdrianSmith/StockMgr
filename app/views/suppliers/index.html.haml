.page-header
  .row
    .span11
      %h1 Suppliers
    .span1
      = link_to "New", new_supplier_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Website
      %th Email
      %th Phone
  %tbody
    - @suppliers.each do |supplier|
      %tr
        %td= link_to supplier.name, supplier_path(supplier)
        %td= supplier.website
        %td= supplier.email
        %td= supplier.preferred_phone
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_path(supplier), :class => 'btn btn-warning btn-mini'
