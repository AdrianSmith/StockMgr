- model_class = @supplier.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @supplier.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @supplier.description
%p
  %strong= model_class.human_attribute_name(:website) + ':'
  %br
  = @supplier.website
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @supplier.email
%p
  %strong= model_class.human_attribute_name(:account_name) + ':'
  %br
  = @supplier.account_name
%p
  %strong= model_class.human_attribute_name(:account_number) + ':'
  %br
  = @supplier.account_number
%p
  %strong= model_class.human_attribute_name(:delivery_rules) + ':'
  %br
  = @supplier.delivery_rules
%p
  %strong= model_class.human_attribute_name(:address_line_1) + ':'
  %br
  = @supplier.address_line_1
%p
  %strong= model_class.human_attribute_name(:address_line_2) + ':'
  %br
  = @supplier.address_line_2
%p
  %strong= model_class.human_attribute_name(:suburb) + ':'
  %br
  = @supplier.suburb
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @supplier.city
%p
  %strong= model_class.human_attribute_name(:postcode) + ':'
  %br
  = @supplier.postcode
%p
  %strong= model_class.human_attribute_name(:phone_mobile) + ':'
  %br
  = @supplier.phone_mobile
%p
  %strong= model_class.human_attribute_name(:phone_home) + ':'
  %br
  = @supplier.phone_home
%p
  %strong= model_class.human_attribute_name(:phone_work) + ':'
  %br
  = @supplier.phone_work
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @supplier.comment
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @supplier.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), suppliers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_path(@supplier), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_path(@supplier), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
