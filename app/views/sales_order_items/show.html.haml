- model_class = @sales_order_item.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:sales_order_id) + ':'
  %br
  = @sales_order_item.sales_order_id
%p
  %strong= model_class.human_attribute_name(:product_id) + ':'
  %br
  = @sales_order_item.product_id
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @sales_order_item.quantity

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), sales_order_items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_sales_order_item_path(@sales_order_item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), sales_order_item_path(@sales_order_item), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
