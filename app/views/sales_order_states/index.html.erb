<h1>Listing sales_order_states</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @sales_order_states.each do |sales_order_state| %>
  <tr>
    <td><%=h sales_order_state.name %></td>
    <td><%=h sales_order_state.description %></td>
