= form_for @product, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :product_type_id, :class => 'control-label'
    .controls
      = f.number_field :product_type_id, :class => 'number_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :supplier_id, :class => 'control-label'
    .controls
      = f.number_field :supplier_id, :class => 'number_field'
  .control-group
    = f.label :supplier_reference, :class => 'control-label'
    .controls
      = f.text_field :supplier_reference, :class => 'text_field'
  .control-group
    = f.label :brand, :class => 'control-label'
    .controls
      = f.text_field :brand, :class => 'text_field'
  .control-group
    = f.label :purchase_price, :class => 'control-label'
    .controls
      = f.text_field :purchase_price, :class => 'text_field'
  .control-group
    = f.label :gst, :class => 'control-label'
    .controls
      = f.check_box :gst, :class => 'check_box'
  .control-group
    = f.label :active, :class => 'control-label'
    .controls
      = f.check_box :active, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), product_path, :class => 'btn'
