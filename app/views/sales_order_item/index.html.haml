- model_class = SalesOrderItem.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sales_order_id)
      %th= model_class.human_attribute_name(:product_id)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sales_order_items.each do |sales_order_item|
      %tr
        %td= link_to sales_order_item.id, sales_order_item_path(sales_order_item)
        %td= sales_order_item.sales_order_id
        %td= sales_order_item.product_id
        %td= sales_order_item.quantity
        %td=l sales_order_item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_sales_order_item_path(sales_order_item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), sales_order_item_path(sales_order_item), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_sales_order_item_path, :class => 'btn btn-primary'
