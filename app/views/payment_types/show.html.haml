- model_class = @payment_type.class
.page-header
  %h1=t '.title', :default => model_class.model_name.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @payment_type.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @payment_type.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), payment_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_payment_type_path(@payment_type), :class => 'btn'