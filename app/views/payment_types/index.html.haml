.page-header
  .row
    .span11
      %h1 Payment Types
    .span1
      = link_to "New", new_payment_type_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th Payments
  %tbody
    - @payment_types.each do |payment_type|
      %tr
        %td= link_to payment_type.name, payment_type_path(payment_type)
        %td= payment_type.description
        %td= payment_type.payments.size
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_payment_type_path(payment_type), :class => 'btn btn-mini btn-info'