<h1>Listing Payments</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Payment type</th>
    <th>User</th>
    <th>Created by user</th>
    <th>Received at</th>
    <th>Comment</th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%=h payment.amount %></td>
    <td><%=h payment.payment_type_id %></td>
    <td><%=h payment.user_id %></td>
    <td><%=h payment.created_by_user_id %></td>
    <td><%=h payment.received_at %></td>
    <td><%=h payment.comment %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New payment', new_payment_path %>