<h1>Editing payment</h1>

<% form_for(@payment) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form' , :locals=>{:f => f}%>
  <p>
    <%= f.label 'Customer' %><br />
    <%= f.select :user_id, @customers, :prompt => 'Select ...' %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @payment %> |
<%= link_to 'Back', payments_path %>