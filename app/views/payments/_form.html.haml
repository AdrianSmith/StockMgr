= form_for @payment do |f|
  -if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :payment_type_id
    = f.number_field :payment_type_id
  .field
    = f.label :customer_id
    = f.number_field :customer_id
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :received_at
    = f.datetime_select :received_at
  .actions
    = f.submit 'Save'
