= form_for @physical_form do |f|
  -if @physical_form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@physical_form.errors.count, "error")} prohibited this physical_form from being saved:"
      %ul
        - @physical_form.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
