= form_for @customer do |f|
  -if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :address_line_1
    = f.text_field :address_line_1
  .field
    = f.label :address_line_2
    = f.text_field :address_line_2
  .field
    = f.label :suburb_town
    = f.text_field :suburb_town
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :phone_mobile
    = f.text_field :phone_mobile
  .field
    = f.label :phone_home
    = f.text_field :phone_home
  .field
    = f.label :phone_work
    = f.text_field :phone_work
  .actions
    = f.submit 'Save'
