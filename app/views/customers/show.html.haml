- model_class = @customer.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @customer.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @customer.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @customer.email
%p
  %strong= model_class.human_attribute_name(:address_line_1) + ':'
  %br
  = @customer.address_line_1
%p
  %strong= model_class.human_attribute_name(:address_line_2) + ':'
  %br
  = @customer.address_line_2
%p
  %strong= model_class.human_attribute_name(:suburb) + ':'
  %br
  = @customer.suburb
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @customer.city
%p
  %strong= model_class.human_attribute_name(:postcode) + ':'
  %br
  = @customer.postcode
%p
  %strong= model_class.human_attribute_name(:phone_mobile) + ':'
  %br
  = @customer.phone_mobile
%p
  %strong= model_class.human_attribute_name(:phone_home) + ':'
  %br
  = @customer.phone_home
%p
  %strong= model_class.human_attribute_name(:phone_work) + ':'
  %br
  = @customer.phone_work
%p
  %strong= model_class.human_attribute_name(:account_balance_cached) + ':'
  %br
  = @customer.account_balance_cached
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @customer.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), customers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(@customer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(@customer), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
