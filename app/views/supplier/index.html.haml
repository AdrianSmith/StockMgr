- model_class = Supplier.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:website)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:account_name)
      %th= model_class.human_attribute_name(:account_number)
      %th= model_class.human_attribute_name(:delivery_rules)
      %th= model_class.human_attribute_name(:address_line_1)
      %th= model_class.human_attribute_name(:address_line_2)
      %th= model_class.human_attribute_name(:suburb)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:postcode)
      %th= model_class.human_attribute_name(:phone_mobile)
      %th= model_class.human_attribute_name(:phone_home)
      %th= model_class.human_attribute_name(:phone_work)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @suppliers.each do |supplier|
      %tr
        %td= link_to supplier.id, supplier_path(supplier)
        %td= supplier.name
        %td= supplier.description
        %td= supplier.website
        %td= supplier.email
        %td= supplier.account_name
        %td= supplier.account_number
        %td= supplier.delivery_rules
        %td= supplier.address_line_1
        %td= supplier.address_line_2
        %td= supplier.suburb
        %td= supplier.city
        %td= supplier.postcode
        %td= supplier.phone_mobile
        %td= supplier.phone_home
        %td= supplier.phone_work
        %td= supplier.comment
        %td= supplier.active
        %td=l supplier.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_path(supplier), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_path(supplier), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_supplier_path, :class => 'btn btn-primary'
