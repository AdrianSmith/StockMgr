- model_class = @product_price.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:product_id) + ':'
  %br
  = @product_price.product_id
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @product_price.amount

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), product_prices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_price_path(@product_price), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), product_price_path(@product_price), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
