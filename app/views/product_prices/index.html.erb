<h1>Listing Product_Prices</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Amount</th>
    <th>Comment</th>
  </tr>

<% @product_prices.each do |product_price| %>
  <tr>
    <td><%=h product_price.product_id %></td>
    <td><%=h product_price.amount %></td>
    <td><%=h product_price.comment %></td>
    <td><%= link_to 'Show', product_price %></td>
    <td><%= link_to 'Edit', edit_product_price_path(product_price) %></td>
    <td><%= link_to 'Destroy', product_price, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product_price', new_product_price_path %>