= form_for @product_price do |f|
  -if @product_price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_price.errors.count, "error")} prohibited this product_price from being saved:"
      %ul
        - @product_price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
