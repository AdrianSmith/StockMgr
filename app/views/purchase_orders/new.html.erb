<h1>New Purchase Order</h1>

<% form_for(@purchase_order) do |f| %>
<%= f.error_messages %>

<p>
  <%= f.label :comment %><br />
  <%= f.text_area :comment,  :cols => 40, :rows => 4 %>
</p>
<p>
  <%= f.submit 'Create', :id => @supplier.id %>
</p>
<% end %>

<%= link_to 'Back', purchase_orders_path %>